{% extends "layout.njk" %}

{% block content %}

    {% block head %}
        <title>Cursos</title>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    {% endblock head %}

    <div class="packet">
        Cursos
    </div>
    <section class="cards">
        {% for card in cards %}

            <div class="card" id="{{card.id}}">
                <div class="card-image">
                    <img src="{{card.img}}" alt="Imagem do curso {{card.title}}">
                </div>
                <div class="card-text">
                    <h2>{{card.title}}</h2>
                    <p>
                        {{card.description}}
                    </p>
                </div>
                <div class="card-stats">
                    <div class="stat border">
                        <div class="value">Preço</div>
                        <div class="type">
                            {{card.price}}
                        </div>
                    </div>
                    <div class="stat">
                        <div class="value">
                            {{card.modules}}
                        </div>
                        <div class="type">Módulos</div>
                    </div>
                </div>
            </div>
        {% endfor %}

    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">
                <i class="material-icons">close</i>
            </a>
            <a class="max-modal">
                <i class="material-icons" id="fullscreen">open_in_full</i>
            </a>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="script.js"></script>

{% endblock content %}